{
  "databaseChangeLog": [
    {
      "preConditions": [
        {
          "not": {
            "tableExists": {
              "tableName": "users"
            }
          }
        }
      ],
      "changeSet": {
        "id": "SP1 - create table users",
        "author": "juan-para",
        "comment": "create table users",
        "changes": [
          {
            "createTable": {
              "tableName": "users",
              "columns": [
                {
                  "column": {
                    "name": "user_id",
                    "type": "INT",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "name",
                    "type": "VARCHAR(100)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "email",
                    "type": "VARCHAR(100)",
                    "constraints": {
                      "nullable": false,
                      "unique": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "phone_number",
                    "type": "VARCHAR(20)",
                    "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "password",
                    "type": "VARCHAR(100)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "user_category_id",
                    "type": "INT",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "created_at",
                    "type": "DATETIME",
                    "constraints": {
                      "nullable": false,
                      "defaultValue": "NOW()"
                    }
                  }
                }
              ]
            }
          },
          {
            "addForeignKeyConstraint": {
              "baseColumnNames": [
                "user_category_id"
              ],
              "baseTableName": "users",
              "constraintName": "fk_users_user_categories",
              "referencedColumnNames": [
                "user_category_id"
              ],
              "referencedTableName": "user_categories"
            }
          }
        ]
      }
    }
  ]
}
